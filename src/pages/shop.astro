---
import Header from '../components/Header.astro';
import ShopItemTile from '../components/ShopItemTile2.astro';

// Feature flag: Set to false to hide all prices on the shop page
const SHOW_PRICES = false;

// Fetch shop items from API
let shopItems: Array<{
  id: string;
  filename: string;
  imageUrl: string;
  title: string;
  price: string;
  status?: 'sold' | 'inquire' | 'not-priced';
  pairPrice?: string;
}> = [];

try {
  // Construct API URL using Astro.url
  const apiUrl = new URL('/api/shop-items.json', Astro.url.origin);
  const response = await fetch(apiUrl.toString());
  
  if (response.ok) {
    const data = await response.json();
    shopItems = data.items || [];
  } else {
    console.error('Failed to fetch shop items:', response.statusText);
  }
} catch (error) {
  console.error('Error fetching shop items:', error);
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Shop - Portfolio</title>
  </head>
  <body>
    <Header currentPage="shop" />
    
    <main class="shop-main">
      <div class="shop-container">
        <h1 class="shop-title">Available Works</h1>
        <p class="shop-subtitle">
            Reach out to <a href="mailto:karlsbayer@gmail.com">karlsbayer@gmail.com</a> to inquire or purchase.
        </p>
        
        {shopItems.length > 0 ? (
          <div class="shop-grid" id="shop-grid">
            {shopItems.map((item) => (
              <ShopItemTile item={item} showPrices={SHOW_PRICES} />
            ))}
          </div>
        ) : (
          <div class="shop-empty">
            <p>Loading shop items...</p>
            <p class="shop-empty-subtitle">If items don't appear, please check the console for errors.</p>
          </div>
        )}
      </div>
    </main>
    
    <script>
      // Client-side fallback: if items didn't load server-side, try fetching them
      document.addEventListener('DOMContentLoaded', async function() {
        const shopGrid = document.getElementById('shop-grid');
        if (!shopGrid || shopGrid.children.length === 0) {
          try {
            const response = await fetch('/api/shop-items.json');
            if (response.ok) {
              const data = await response.json();
              const items = data.items || [];
              
              if (items.length > 0) {
                const container = document.querySelector('.shop-empty') || shopGrid?.parentElement;
                if (container) {
                  container.innerHTML = `
                    <div class="shop-grid" id="shop-grid">
                      ${items.map((item: any) => `
                        <div class="shop-item-tile">
                          <div class="shop-item-image">
                            <img src="${item.imageUrl}" alt="${item.title}" loading="lazy" />
                          </div>
                          <div class="shop-item-info">
                            <h3 class="shop-item-title">${item.title}</h3>
                            <p class="shop-item-price">${item.price}</p>
                          </div>
                        </div>
                      `).join('')}
                    </div>
                  `;
                }
              }
            }
          } catch (error) {
            console.error('Error fetching shop items client-side:', error);
            const emptyDiv = document.querySelector('.shop-empty');
            if (emptyDiv) {
              emptyDiv.innerHTML = '<p>Unable to load shop items. Please try again later.</p>';
            }
          }
        }
      });
    </script>
    
    <style>
      :root {
        --card-radius: 0.5rem;
        --accent-color: #3b82f6;
        --grid-gap: 1rem;
        --card-min-width: 300px;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: system-ui, sans-serif;
        background: #0f0f0f;
        color: #ffffff;
        line-height: 1.6;
        padding-top: 80px; /* Account for fixed header */
      }
      
      .shop-main {
        margin-top: 2rem;
        min-height: calc(100vh - 80px);
        padding: 2rem 0;
      }
      
      .shop-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 4rem;
      }
      
      .shop-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .shop-subtitle {
        font-size: 1.2rem;
        color: #cccccc;
        margin-bottom: 3rem;
      }
      
      .shop-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: var(--grid-gap);
      }
      
      .shop-empty {
        text-align: center;
        padding: 4rem 2rem;
        color: #888;
      }
      
      .shop-empty-subtitle {
        font-size: 0.9rem;
        margin-top: 0.5rem;
        color: #666;
      }
      
      /* Include shop item tile styles */
      .shop-item-tile {
        background: #303030;
        border-radius: 1.2rem;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
        display: flex;
        flex-direction: column;
      }
      
      .shop-item-tile:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
      }
      
      .shop-item-image {
        position: relative;
        aspect-ratio: 3/4;
        overflow: hidden;
        background: #1a1a1a;
      }
      
      .shop-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transform: scale(1.2);
        transition: transform 0.3s;
      }
      
      .shop-item-tile:hover .shop-item-image img {
        transform: scale(1.25);
      }
      
      .shop-item-info {
        padding: 0.75rem;
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
      }
      
      .shop-item-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
        color: #ffffff;
        line-height: 1.3;
      }
      
      .shop-item-price {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--accent-color, #3b82f6);
      }
      
      @media (max-width: 1200px) {
        .shop-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      
      @media (max-width: 768px) {
        .shop-container {
          padding: 0 1rem;
        }
        
        .shop-grid {
          grid-template-columns: repeat(2, 1fr);
        }
        
        .shop-title {
          font-size: 2rem;
        }
        
        .shop-subtitle {
          font-size: 1rem;
        }
        
        .shop-item-info {
          padding: 0.5rem;
          gap: 0.3rem;
        }
        
        .shop-item-title {
          font-size: 0.85rem;
        }
        
        .shop-item-price {
          font-size: 0.95rem;
        }
        
        .shop-item-pair-price {
          font-size: 0.75rem;
        }
      }
    </style>
  </body>
</html>

