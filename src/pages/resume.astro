---
import Header from '../components/Header.astro';

// Update this URL to your actual Google Drive PDF
const resumeUrl = "https://drive.google.com/file/d/YOUR_FILE_ID/view?usp=sharing";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Resume - Portfolio</title>
	</head>
	<body>
		<Header currentPage="resume" />
		<main class="main-content">
			
			<section class="resume-content">
				<h1>Resume</h1>
				<p>Download my resume to learn more about my experience and skills.</p>
				
				<a href={resumeUrl} target="_blank" class="resume-button">
					ðŸ“„ View Resume (Google Drive)
				</a>
				
				<div class="instructions">
					<h2>Instructions</h2>
					<p>To update the resume link:</p>
					<ol>
						<li>Upload your resume PDF to Google Drive</li>
						<li>Get the shareable link</li>
						<li>Update the <code>resumeUrl</code> variable in <code>src/pages/resume.astro</code></li>
					</ol>
				</div>
			</section>
		</main>
		
		<style>
			:root {
				--accent-color: #3b82f6;
			}
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: system-ui, sans-serif;
				background: #0f0f0f;
				color: #ffffff;
				line-height: 1.6;
			}
			
			.main-content {
				max-width: 800px;
				margin: 0 auto;
				padding: 6rem 2rem 2rem 2rem;
			}
			
			header {
				margin-bottom: 3rem;
			}
			
			nav a {
				color: #ffffff;
				text-decoration: none;
				font-weight: 500;
				transition: color 0.2s;
			}
			
			nav a:hover {
				color: var(--accent-color);
			}
			
			.resume-content {
				text-align: center;
			}
			
			h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
			}
			
			p {
				font-size: 1.2rem;
				margin-bottom: 2rem;
				color: #cccccc;
			}
			
			.resume-button {
				display: inline-block;
				background: var(--accent-color);
				color: white;
				padding: 1rem 2rem;
				border-radius: 0.5rem;
				text-decoration: none;
				font-weight: 600;
				font-size: 1.1rem;
				transition: background 0.2s;
				margin-bottom: 3rem;
			}
			
			.resume-button:hover {
				background: #2563eb;
			}
			
			.instructions {
				text-align: left;
				background: #1a1a1a;
				padding: 2rem;
				border-radius: 0.5rem;
				border: 1px solid #333;
			}
			
			.instructions h2 {
				margin-bottom: 1rem;
				color: var(--accent-color);
			}
			
			.instructions ol {
				margin-left: 1.5rem;
			}
			
			.instructions li {
				margin-bottom: 0.5rem;
			}
			
			code {
				background: #333;
				padding: 0.2rem 0.4rem;
				border-radius: 0.25rem;
				font-family: 'Monaco', 'Consolas', monospace;
			}
			
			@media (max-width: 768px) {
				main {
					padding: 1rem;
				}
				
				h1 {
					font-size: 2rem;
				}
				
				.resume-button {
					padding: 0.8rem 1.5rem;
					font-size: 1rem;
				}
			}
		</style>
	</body>
</html>
